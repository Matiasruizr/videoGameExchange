<p id="notice"><%= notice %></p>
<div class="row p-5 consulta">
<h1>Juegos</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Anio</th>
      <th>Estado</th>
      <th>Consola</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.nombre %></td>
        <td><%= game.anio %></td>
        <td><%= game.estado %></td>
        <td><%= game.consola %></td>
        <td><%= game.categoria %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>


</div>
